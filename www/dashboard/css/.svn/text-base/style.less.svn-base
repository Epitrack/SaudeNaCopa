body {
	color: black;
	padding-top: 60px;
}

.navbar {
	.brand {
		margin-left:  1em;
	}
	li {


		&.dashboard {
			@espacamento: 6px;
			padding-left: @espacamento;
			a {
				background-image: url("../imagens/ajax-loader-menu.gif");
				background-position: left center;
				background-repeat: no-repeat;
				text-indent: @espacamento;
				position: relative;
				left: @espacamento;
			}
		}
	}
}

