<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlSentimento"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </ViewFlipper>

    <TextView
        android:id="@+id/txtNomeArena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layBotoesArenas"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/arena_pernambuco"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/luzavatar" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="@dimen/altura_imagem_item"
        android:layout_height="@dimen/altura_imagem_item"
        android:layout_above="@+id/imgCategoria"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        android:scrollbars="none"
        android:visibility="invisible" >
    </ListView>

    <ViewFlipper
        android:id="@+id/flipAvatar"
        android:layout_width="@dimen/altura_imagem_item"
        android:layout_height="@dimen/altura_imagem_item"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="50dp"
        android:scrollbars="none" >
    </ViewFlipper>

    <TextView
        android:id="@+id/txtSentimento"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/flipAvatar"
        android:layout_alignParentLeft="false"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:lines="2"
        android:text="@string/pergunta_sentimento1"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtPontos"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtNomeArena"
        android:layout_alignRight="@+id/btnInformarSintoma"
        android:gravity="center"
        android:text="804 points"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imgCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtNomeArena"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/flipAvatar"
        android:src="@drawable/denteleite_categoria" />

    <Button
        android:id="@+id/btnInformarSintoma"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/listView1"
        android:background="@drawable/button_ok" />

    <ImageView
        android:id="@+id/imgEngajamento00"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/txtPontos"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/txtPontos"
        android:src="@drawable/quadro_branco" />

    <ImageView
        android:id="@+id/imgEngajamento02"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/imgEngajamento01"
        android:layout_alignLeft="@+id/imgEngajamento00"
        android:src="@drawable/quadro_branco" />

    <ImageView
        android:id="@+id/imgEngajamento03"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/imgEngajamento02"
        android:layout_alignLeft="@+id/imgEngajamento00"
        android:src="@drawable/quadro_branco" />

    <ImageView
        android:id="@+id/imgEngajamento04"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/imgEngajamento03"
        android:layout_alignLeft="@+id/imgEngajamento00"
        android:src="@drawable/quadro_branco" />

    <ImageView
        android:id="@+id/imgEngajamento05"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/imgEngajamento04"
        android:layout_alignLeft="@+id/imgEngajamento00"
        android:src="@drawable/quadro_branco" />

    <ImageView
        android:id="@+id/imgEngajamento06"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/imgEngajamento05"
        android:layout_alignLeft="@+id/imgEngajamento00"
        android:src="@drawable/quadro_branco" />

    <ImageView
        android:id="@+id/imgEngajamento07"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/imgEngajamento06"
        android:layout_alignLeft="@+id/imgEngajamento00"
        android:src="@drawable/quadro_branco" />

    <ImageView
        android:id="@+id/imgEngajamento08"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/imgEngajamento07"
        android:layout_alignLeft="@+id/imgEngajamento00"
        android:src="@drawable/quadro_branco" />

    <ImageView
        android:id="@+id/imgEngajamento09"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/imgEngajamento08"
        android:layout_alignLeft="@+id/imgEngajamento00"
        android:src="@drawable/quadro_branco" />

    <ImageView
        android:id="@+id/imgEngajamento10"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/imgEngajamento09"
        android:layout_alignLeft="@+id/imgEngajamento00"
        android:src="@drawable/quadro_branco" />

    <ImageView
        android:id="@+id/imgEngajamento11"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/imgEngajamento10"
        android:layout_alignLeft="@+id/imgEngajamento00"
        android:src="@drawable/quadro_branco" />

    <ImageView
        android:id="@+id/imgEngajamento01"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/imgEngajamento00"
        android:layout_alignLeft="@+id/imgEngajamento00"
        android:src="@drawable/quadro_branco" />

    <LinearLayout
        android:id="@+id/layBotoesArenas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/imgSombra1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal" >

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/listView1"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:onClick="showInfo"
        android:src="@drawable/informacoes"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgTrofeuCategoria"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:background="@drawable/btn_base"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/btnAmarelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/btn_amarelo_inativo" />

        <ImageView
            android:id="@+id/btnLaranja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/btn_laranja_inativo" />

        <ImageView
            android:id="@+id/btnVerde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/btn_verde_ativo" />

        <ImageView
            android:id="@+id/btnVermelho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/btn_vermelho_inativo" />

        <ImageView
            android:id="@+id/btnVermelhoEscuro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/btn_vermelho_escuro_inativo" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgSombra1"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/flipAvatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/sombra" />

    <ImageView
        android:id="@+id/imgTrofeuCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgCategoria"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:src="@drawable/cat_dl_trofeu" />

    <Button
        android:id="@+id/btnHospital"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnInformarSintoma"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/listView1"
        android:background="@drawable/ico_sentimento_hospital"
        android:onClick="abreHospitais"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnFarmacia"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnHospital"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/listView1"
        android:onClick="abreFarmacias"
        android:background="@drawable/ico_sentimento_farmacia"
        android:visibility="invisible" />

</RelativeLayout>