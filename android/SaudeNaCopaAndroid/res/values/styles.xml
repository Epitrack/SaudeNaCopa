<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:style/Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SplashTheme" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashTheme.FullScreen" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="btnTelaInicial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/button_geral_normal</item>
        <item name="android:textColor">@color/cinza_texbox</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/cinza2</item>
    </style>

    <style name="textBox">
        <item name="android:background">@drawable/caixa_texto</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:height">35dp</item>
        <item name="android:textColor">@color/cinza_texbox</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/cinza2</item>
    </style>

    <style name="textBoxIdade" parent="textBox">
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="btnGeral">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/button_acao</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="btnGeralBranco" parent="btnGeral">
        <item name="android:background">@drawable/button_acao_branco</item>
        <item name="android:textColor">@color/cinza_texbox</item>
    </style>

    <style name="texto_azul">
        <item name="android:textColor">@color/azul_texto </item>
    </style>

    <style name="RadioButtonAppTheme" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/apptheme_btn_radio_holo_light</item>
    </style>

    <style name="CheckBoxsintoma" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/sintoma_btn_check_holo_light</item>
    </style>

    <style name="quadrado_land">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="Theme.appcompat.sentimento" parent="Theme.AppCompat.Light">
        <item name="actionbar_azul">@color/bandeira_azul_claro</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="imagensMenu">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="btnTelaSaude">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/cinza_texbox</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="btnTelaMenu">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/azul_escuro</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="txtAlterarSEnha">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:inputType">textPassword</item>
    </style>
   

</resources>