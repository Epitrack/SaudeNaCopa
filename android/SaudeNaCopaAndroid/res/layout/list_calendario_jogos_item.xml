<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
 <TextView
     android:id="@+id/lblGrupo"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="20dp"
     android:layout_marginTop="20dp"
     android:background="@color/verde_jogos"
     android:paddingBottom="5dp"
     android:paddingLeft="10dp"
     android:paddingRight="10dp"
     android:paddingTop="5dp"
     android:text="GRUPO A"
     android:textColor="@color/white"
     android:textSize="17sp"
     android:textStyle="bold" />

 <LinearLayout
     android:id="@+id/lnRodada"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginLeft="25dp"
     android:layout_marginRight="20dp" >

     <TextView
         android:id="@+id/lblRodada"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
         android:text="RODADA 01"
         android:textColor="@color/verde_jogos" />

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="bottom"
         android:src="@drawable/linha_verde" />

 </LinearLayout>

 <TextView
     android:id="@+id/lblTimes"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="25dp"
     android:layout_marginTop="5dp"
     android:text="BRASIL X CROÃCIA"
     android:textSize="15sp" />

 <TextView
     android:id="@+id/lblHorario"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="25dp"
     android:text="Quinta 12/06/2014 - 17:00 - Arena Corinthians"
     android:textSize="11sp" />

 <ImageView
     android:id="@+id/ImageView01"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginBottom="5dp"
     android:layout_marginLeft="25dp"
     android:layout_marginRight="20dp"
     android:layout_marginTop="5dp"
     android:src="@drawable/linha"
     android:visibility="invisible" />

 <ListView
     android:id="@+id/listView1"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" >
 </ListView>
 
</LinearLayout>
